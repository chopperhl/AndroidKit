<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_progress_bar"
        android:paddingBottom="@dimen/dp_24"
        android:paddingLeft="@dimen/dp_32"
        android:paddingRight="@dimen/dp_32"
        android:paddingTop="@dimen/dp_24"
        tools:ignore="UselessParent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/colorLoading"
            tools:targetApi="lollipop" />

        <TextView
            android:id="@+id/tv_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/app_loading"
            android:textColor="@color/colorLoading" />
    </RelativeLayout>
</FrameLayout>